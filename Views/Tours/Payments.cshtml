
@{
    ViewBag.Title = "Payments";
    Layout = "~/Views/Shared/LayoutMenuOr.cshtml";
    var pay = ViewBag.payment;
    var tours = ViewBag.tours;
}

<div class="booking-tours">
    <div class="checkout-head">
        <div class="container">
            <div class="row">
                <div class="checkout-head-in">
                    <div class="text-head-checkout active-text">1. Nhập thông tin</div>
                    <div><i class="fa fa-angle-right" aria-hidden="true"></i></div>
                    <div class="text-head-checkout active-text">2. Thanh toán</div>
                </div>
            </div>
        </div>

        <div class="payment-info-bg">
            <div class="payment-info-in">
                <div class="pay-info-tours-group">
                    <i class="fa fa-list-alt fa-3x" aria-hidden="true"></i>
                    <div class="title-in-payment">
                        <span>Tên Tour: </span>
                        <span>Thời gian khởi hành: </span>
                        <span>Địa điểm khởi hành: </span>
                        <span>Ngày khởi hành: </span>
                        <span>Tổng số hành khách: </span>
                        <span>Phụ thu phòng riêng: </span>
