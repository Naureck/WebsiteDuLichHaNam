@model IEnumerable<HaNamSite.Models.EF.DiaDiem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
    int i = 1;

}

<style>
    .content-short
    {
        text-overflow: ellipsis;
        overflow: hidden;
        -webkit-line-clamp: 5;
        -webkit-box-orient: vertical;
        display: -webkit-box;
    }

</style>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản Lý Địa Điểm</h1>
    <p class="mb-4">
        @Html.ActionLink("Create", "CreateLocations")
    </p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Địa Điểm Tham Quan</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>@Html.DisplayNameFor(model => model.TenDiaDiem)</th>
                            <th>@Html.DisplayNameFor(model => model.Img)</th>
                            <th>@Html.DisplayNameFor(model => model.Mota)</th>
                            <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>STT</th>
                            <th>@Html.DisplayNameFor(model => model.TenDiaDiem)</th>
                            <th>@Html.DisplayNameFor(model => model.Img)</th>
                            <th>@Html.DisplayNameFor(model => model.Mota)</th>
                            <th>@Html.DisplayNameFor(model => model.DiaChi)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                           
                            <tr>
                                <td>@Convert.ToString(i)</td>
                                <td>@Html.DisplayFor(modelItem => item.TenDiaDiem)</td>
                                <td><img class="img-tbl" src="~/Asset/img/@item.Img" /></td>
                                <td><p class="content-short">@Html.DisplayFor(modelItem => item.Mota)</p></td>
                                <td>@Html.DisplayFor(modelItem => item.DiaChi)</td>
                                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                <td>
                                    @Html.ActionLink("Edit", "EditLocations", new { id = item.ID }) <br />
                                    @*@Html.ActionLink("Details", "Details", new { id = item.ID })*@ <br />
                                    @Html.ActionLink("Delete", "DeleteLocations", new { id = item.ID })
                                </td>
                            </tr>
                            i++;
                        }



                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

